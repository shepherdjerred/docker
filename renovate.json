{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions.ts",
      "fileMatch": ["cdk8s/src/versions/versions.ts"],
      "matchStrings": [
        "\\/\\/ renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))?(?: registryUrl=(?<registryUrl>.*?)? versioning=(?<versioning>[a-z-]+?))?\\s*.\"(?<packageName>.+?)\": \"(?<currentValue>.+?)\""
      ]
    }
  ]
}
